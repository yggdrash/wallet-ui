{
  "name": "yggdrash-client",
  "version": "0.0.1",
  "license": "MIT",
  "productName": "Yggdrash Client",
  "description": "Yggdrash Desktop Wallet",
  "keywords": [
    "Yggdrash",
    "Wallet",
    "Account",
    "Yeed",
    "R2V",
    "Client",
    "Electron",
    "React"
  ],
  "private": false,
  "scripts": {
    "dev": "concurrently --kill-others \"yarn run startReact\" \"ENV=dev electron .\"",
    "start": "concurrently --kill-others \"yarn run startReact\" \"electron . -- --disableScreenshotProtection\"",
    "startReact": "cd client && npm start",
    "build": "electron-packager . --prune=false --icon=coin.icns --ignore=/client --overwrite --out=dist",
    "prebuild": "yarn run deleteWallet && cd client && npm run build",
    "deleteWallet": "rm -rf yggdrash-chain/src/accounts/privateKey",
    "live-reload": "cross-env LIVE_RELOAD=true electron main.js",
    "dist": "npm run dist:win && npm run dist:macos && npm run dist:linux && npm run dist:win32",
    "dist-quick": "npm run dist:win && npm run dist:macos && npm run dist:linux",
    "dist:win": "electron-builder --win",
    "dist:win32": "electron-builder --win --ia32",
    "dist:macos": "electron-builder --macos",
    "dist:linux": "electron-builder --linux"
  },
  "main": "main.js",
  "devDependencies": {
    "concurrently": "^3.6.0",
    "electron": "1.8.3",
    "electron-packager": "^12.1.0"
  },
  "dependencies": {
    "about-window": "^1.11.1",
    "axios": "^0.18.0",
    "babel-loader": "^7.1.4",
    "bip39": "^2.5.0",
    "body-parser": "^1.18.2",
    "cors": "^2.8.4",
    "crypto-js": "^3.1.9-1",
    "electron-builder": "^20.19.1",
    "electron-window-state": "^4.1.1",
    "elemon": "^5.0.3",
    "elliptic": "^6.4.0",
    "express": "^4.16.2",
    "get-port": "^3.2.0",
    "global": "^4.3.2",
    "hex-to-binary": "^1.0.1",
    "history": "^4.7.2",
    "lodash": "^4.17.5",
    "morgan": "^1.9.0",
    "node-sass": "^4.9.0",
    "nodemon": "^1.17.5",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-icons-kit": "^1.1.5",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.3.1",
    "react-router-redux": "^5.0.0-alpha.9",
    "react-scripts": "1.1.4",
    "reactotron-react-js": "^1.13.0",
    "redux": "^4.0.0",
    "redux-i18n": "^1.5.13",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.3.0",
    "reset-css": "^4.0.1",
    "sass-loader": "^7.0.3",
    "styled-components": "^3.3.3",
    "styled-reset": "^1.3.5",
    "typography": "^0.16.17",
    "ws": "^4.1.0"
  },
  "build": {
    "appId": "com.yggdrashwallet.liteclient",
    "productName": "Yggdrash Client",
    "protocols": {
      "name": "Yggdrash URI scheme",
      "schemes": [
        "yggdrash"
      ],
      "role": "Viewer"
    },
    "mac": {
      "category": "finance"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "linux": {
      "description": "A Lite Client used to securely connect to the yggdrash network and manage your yggdrash assets.",
      "target": [
        "deb",
        "tar.xz"
      ],
      "desktop": {
        "MimeType": "x-scheme-handler/yggdrash;"
      },
      "category": "Network"
    },
    "deb": {
      "synopsis": "Yggdrash Desktop Wallet"
    },
    "dmg": {
      "icon": "build/icon.icns"
    },
    "nsis": {
      "perMachine": true,
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
